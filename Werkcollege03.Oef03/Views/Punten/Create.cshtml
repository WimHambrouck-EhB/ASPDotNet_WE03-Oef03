@model PuntViewModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Punt</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Punt.StudentID" class="control-label"></label>
                <select asp-for="Punt.StudentID" class="form-control" asp-items="Model.Studenten">
                    <option selected="selected">Kies student...</option>
                </select>
                <span asp-validation-for="Punt.StudentID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Punt.VakID" class="control-label"></label>
                <select asp-for="Punt.VakID" class="form-control" asp-items="Model.Vakken">
                    <option selected="selected">Kies vak...</option>
                </select>
                <span asp-validation-for="Punt.VakID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Punt.Score" class="control-label"></label>
                <input asp-for="Punt.Score" class="form-control" />
                <span asp-validation-for="Punt.Score" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
